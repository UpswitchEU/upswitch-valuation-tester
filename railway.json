{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "yarn preview",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "phases": {
      "setup": {
        "nixPkgs": ["nodejs-18_x", "yarn-1_x"]
      },
      "install": {
        "cmds": ["yarn install --frozen-lockfile"]
      },
      "build": {
        "cmds": ["yarn build"]
      }
    }
  }
}
