# Unlimited Credits Mode Configuration for Valuation Tester
# Copy this to .env.local to enable unlimited credits mode

# Credit System Configuration
VITE_UNLIMITED_CREDITS_MODE=true
VITE_SHOW_CREDIT_BADGE=true
VITE_SHOW_USAGE_STATS=true
VITE_ENABLE_PREMIUM_UPSELL=false

# UI/UX Configuration
VITE_SHOW_ONBOARDING_TOOLTIPS=true
VITE_ENABLE_ANIMATIONS=true
VITE_SHOW_CREDIT_ANALYTICS=true

# Development Configuration
VITE_DEBUG_CREDIT_SYSTEM=false
VITE_MOCK_CREDIT_DATA=false

# API Configuration
VITE_API_URL=https://api.upswitch.app
VITE_CREDIT_API_URL=https://api.upswitch.app/api/credits
VITE_BACKEND_URL=https://api.upswitch.app
